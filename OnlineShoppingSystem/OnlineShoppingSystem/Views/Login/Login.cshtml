@model OnlineShoppingSystem.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Đăng nhập</h3>
                <div class="d-flex justify-content-end social_icon">
                    <span><i class="fab fa-facebook-square"></i></span>
                    <span><i class="fab fa-google-plus-square"></i></span>
                    <span><i class="fab fa-twitter-square"></i></span>
                </div>
            </div>
            @Html.ValidationSummary(false, "", new { @style = "color: red"})
            @using (Html.BeginForm())
            {
                <div class="card-body">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@class = "form-control", @placeholder = "Tài khoản"}})
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control", @placeholder = "Mật khẩu"}})
                    </div>
                    <div class="row align-items-center remember">
                        <input type="checkbox">Ghi nhớ đăng nhập
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Đăng nhập" class="btn float-right login_btn">
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Chưa có tài khoản?<a href="@Url.Action("CreateAccount", "Account")">Đăng ký ngay</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        @Html.ActionLink("Trang chủ", "Home", "Home")
                    </div>
                </div>
            }
        </div>
    </div>
</div>



